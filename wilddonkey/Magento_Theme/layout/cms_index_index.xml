<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <block class="Magento\Framework\View\Element\Template"
                   name="wild_donkey_hero"
                   template="Magento_Theme::html/hero-wild-donkey.phtml"/>
        </referenceContainer>

        <referenceContainer name="content">
            <!-- Sustainable Sources CMS Block -->
            <block class="Magento\Cms\Block\Block" name="sustainable_sources_block" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">sustainable_sources</argument>
                </arguments>
            </block>

            <!-- About Us CMS Block -->
            <block class="Magento\Cms\Block\Block" name="about_us_block" after="sustainable_sources_block">
                <arguments>
                    <argument name="block_id" xsi:type="string">about_us</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
